{
    "manifest_version": 2,
    "name": "MyNetWatch",
    "description": "View online usage data and statistics",
    "version": "1.0",
    "icons": { 
        "16": "/images/icon16.png", 
        "48": "/images/icon48.png", 
        "128": "/images/icon128.png" 
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "idle",
        "chrome://favicon/*",
        "webNavigation",
        "unlimitedStorage"
    ],
    "optional_permissions": [
        "https://www.youtube.com/*",
        "https://www.netflix.com/*",
        "notifications"
    ],
    "offline_enabled": true,
    "background": {
        "page": "background.html",
        "scripts": ["scripts/common.js", 
                    "scripts/storage.js", 
                    "scripts/activity.js", 
                    "scripts/tab.js", 
                    "scripts/timeInterval.js",
                    "scripts/background.js",
                    "scripts/restriction.js",
                    "scripts/url.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "MyNetWatch",
        "default_icon": {
            "16": "/images/icon16.png", 
            "48": "/images/icon48.png", 
            "128": "/images/icon128.png" 
        }
    }
}